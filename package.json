{
  "name": "tm-cx",
  "version": "1.0.0",
  "description": "Evolving the thinkmoney Customer Experience",
  "homepage": "https://benchilds.github.io/tm-cx/",
  "main": "index.html",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/benchilds/tm-cx.git"
  },
  "author": "Ben Childs",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/benchilds/tm-cx/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "bootstrap-css-only": "^4.4.1",
    "concat": "^1.0.3",
    "concurrently": "^5.2.0",
    "copyfiles": "^2.2.0",
    "gh-pages": "^2.2.0",
    "http-server": "^0.12.3",
    "live-reload": "^1.1.0",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2"
  },
  "scripts": {
    "start": "concurrently \"npm run http-server\" \"npm run live-reload\" \"npm run concat\" \"npm run copyfiles\" \"npm run scss\"",
    "http-server": "http-server ./dist -a localhost -p 8000 -c0",
    "live-reload": "live-reload --port=8001 dist/",
    "scss": "node-sass -o dist/css assets/scss/style.scss",
    "concat": "npm run concat:bootstrap",
    "concat:bootstrap": "concat -o dist/css/bootstrap.css node_modules/bootstrap-css-only/css/*.min.css",
    "copyfiles": "npm run copyfiles:css-maps && npm run copyfiles:fonts",
    "copyfiles:css-maps": "copyfiles -f node_modules/bootstrap-css-only/css/*.css.map dist/css",
    "copyfiles:fonts": "copyfiles -f assets/fonts/*.otf dist/fonts",
    "watch": "npm run watch:scss",
    "watch:scss": "onchange 'assets/scss/style.scss' -- npm run scss",
    "deploy": "gh-pages -d dist",
    "predeploy": "npm run scss && npm run concat && npm run copyfiles"
  }
}
